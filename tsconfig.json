{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist/main/",
    "rootDir": "./src/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
